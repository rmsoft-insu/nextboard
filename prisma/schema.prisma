// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Board {
  postIdx     Int      @id @default(autoincrement())
  postTitle   String
  postContent String? @db.LongText
  regDate     DateTime @default(now())
}


model Menu {
  idx Int @id @default(autoincrement())
  name String 
  code String @unique
  kinds Kind[]
  posts Post[]
}

model Kind {
  idx Int @id @default(autoincrement())
  name String 
  code String @unique
  menu Menu @relation(fields: [menuIdx], references: [idx])
  menuIdx Int
  posts Post[]
}

model Post {
 idx Int @id @default(autoincrement())
  title String
  description String
  kind Kind @relation(fields: [kindIdx], references: [idx])
  kindIdx Int
  menu Menu @relation(fields: [menuIdx], references: [idx])
  menuIdx Int
}

model Category {
  idx Int @id @default(autoincrement())
  category String
  kind String
  title String
  description String
}